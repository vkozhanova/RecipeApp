<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight" >
        <item name="android:statusBarColor">@color/background_gray</item>
        <item name="android:navigationBarColor">@color/background_gray</item>
        <item name="materialButtonStyle">@style/StyleNavButton</item>
</style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="background">@null</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>