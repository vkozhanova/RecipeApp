<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_color"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttons_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_list_categories"
        />


 <LinearLayout
     android:id="@+id/buttons_container"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:padding="@dimen/main_space_16"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     >

     <Button
         android:id="@+id/btnCategories"
         style="@style/StyleNavButton"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:layout_marginEnd="@dimen/button_margin_half_2"
         app:backgroundTint="@color/button_blue_color"
         android:text="@string/categories"
         />

     <Button
         android:id="@+id/btnFavorites"
         style="@style/StyleNavButton"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/button_margin_half_2"
         android:layout_weight="1"
         app:backgroundTint="@color/button_red_color"
         android:text="@string/favorites"
         app:icon="@drawable/ic_heart_empty"
         app:iconSize="@dimen/icon_size"
         app:iconGravity="textEnd"
         app:iconPadding="@dimen/icon_padding" />

 </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>